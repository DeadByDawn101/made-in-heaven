{
  "manifest_version": 3,
  "name": "Made in Heaven â€” RavenX Agent",
  "version": "1.0.0",
  "description": "RavenX AI browser agent. Claude-powered automation, Solana tools, and empire operations. Native Chrome OS.",

  "permissions": [
    "debugger",
    "activeTab",
    "tabs",
    "storage",
    "sidePanel",
    "scripting",
    "notifications"
  ],

  "host_permissions": [
    "https://api.anthropic.com/*",
    "https://quote-api.jup.ag/*",
    "https://api.mainnet-beta.solana.com/*",
    "https://api.devnet.solana.com/*",
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "side_panel": {
    "default_path": "sidepanel.html"
  },

  "action": {
    "default_title": "Made in Heaven",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
